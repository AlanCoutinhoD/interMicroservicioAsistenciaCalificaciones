# Configuración de Base de Datos Principal
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password
DB_DATABASE=intermicroasistencia

# Configuración de Base de Datos de Alumnos
ALUMNOS_DB_HOST=localhost
ALUMNOS_DB_PORT=3306
ALUMNOS_DB_USERNAME=root
ALUMNOS_DB_PASSWORD=your_password
ALUMNOS_DB_DATABASE=alumnos

# Configuración del Servidor
PORT=3000
NODE_ENV=development

# Configuración de Gemini AI (Google AI Studio)
# Obtén tu API Key desde: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Configuraciones opcionales de Gemini
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7

# Configuración de logging
LOG_LEVEL=info

# Configuración de CORS
CORS_ORIGIN=http://localhost:5173
